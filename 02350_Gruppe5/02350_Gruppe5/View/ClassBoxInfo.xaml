<UserControl x:Class="_02350_Gruppe5.View.ClassBoxInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="200">
    <!-- Infopanel til classBox -->
    <StackPanel Width="200">
        <StackPanel.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFAAAAAA" Offset="0"/>
                <GradientStop Color="#FFC9C9C9" Offset="1"/>
            </LinearGradientBrush>
        </StackPanel.Background>
        <Label HorizontalAlignment="Center" FontWeight="Bold">Change properties for class box</Label>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Padding="6,1" Margin="3" FontWeight="Bold">F</Button>
            <Button Padding="8,1" Margin="3" FontStyle="Italic">I</Button>
            <Button Padding="6,1" Margin="3">U</Button>
        </StackPanel>
        <DataGrid x:Name="dgClass" ItemsSource="{Binding SelectedClassBox}" HeadersVisibility="Column" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ClassName}" Width="*" Header="Classname: "/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Text="Attributes:"/>
        <ListBox ItemsSource="{Binding SelectedClassBox}" BorderBrush="Black">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ListBox ItemsSource="{Binding AttNamesClass}" BorderBrush="White" HorizontalAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Name}" BorderBrush="White" Width="170"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <DockPanel>
            <Button Content="Add Attribute" Margin="5,3,0,3" IsEnabled="{Binding classBoxSelected}" Command="{Binding addAtt}" />
            <Button Content="Remove Attribute" HorizontalAlignment="Right" Margin="0,3,5,3" IsEnabled="{Binding classBoxSelected}" Command="{Binding removeAtt}" />
        </DockPanel>
        <TextBlock Text="Methods:"/>
        <ListBox ItemsSource="{Binding SelectedClassBox}" BorderBrush="Black">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ListBox ItemsSource="{Binding MethodNamesClass}" BorderBrush="White" HorizontalAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Name}" Width="170" BorderBrush="White"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <DockPanel>
            <Button Content="Add Method"  Margin="5,3,0,3" IsEnabled="{Binding classBoxSelected}" Command="{Binding addMethod}"/>
            <Button Content="Remove Method" HorizontalAlignment="Right" Margin="0,3,5,3" IsEnabled="{Binding classBoxSelected}" Command="{Binding removeMethod}" />
        </DockPanel>
    </StackPanel>
</UserControl>
